<div class="row">
  <div class="col-6">
    <h1>Books</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addbook" type="button" class="btn btn-primary align-self-center">+ add book</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
       {{!-- <th scope="col">Id</th> --}}
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col">Genre</th>
      <th scope="col">Location</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      {{!-- <th scope="row">{{this.Id}}</th> --}}
      <td>{{this.author}}</td>
      <td>{{this.title}}</td>
      <td>{{this.genre}}</td>
      <td>{{this.location}}</td>
      <td class="text-end">
        <a href="/editbook/{{this.Id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.Id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
